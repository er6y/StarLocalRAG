<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_model_not_found"
        android:textSize="16sp"
        android:textColor="#FF0000"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textViewModelPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_select_embedding_model"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerModels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textViewRerankerPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_select_reranker_model"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerRerankers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/checkBoxRemember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_remember_choice"
        android:checked="true"
        android:layout_marginTop="8dp" />

</LinearLayout>
